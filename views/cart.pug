extends layout

block content
  h1 Appoinment
  - var total=0;
    table.table
      thead
        tr
          th Doctor Name
          th FEE
          th Doctor ID
          th Appointments
          th Remove 
      tbody
        each item in cart
          - total +=Number(item.fee);
          tr
            td=item.name
            td=item.fee
            td=item.docid
            td=item.appointments
            td 
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Remove
      tfoot
        tr
            td TOTAL
            td=total
